{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5450;Database=edamicrodb;Username=app-eda-micro-user;Password=postgres",
  },
  "MessageBroker": {
    "BootstrapServers": "localhost:9092",
    "Consumers": {
      "ProductDeactivatedConsumer": {
        "GroupId": "catalog-inventory-worker",
        "Topic": "product-deactivated",
        "Config": {
          "auto.offset.reset": "earliest"
        },
        "InventoryReservationConsumer": {
          "GroupId": "catalog-inventory-worker",
          "Topic": "inventory-reservation"
        }
      }
    },
    "Producers": {
      "ProductDeactivatedProducer": {
        "Topic": "product-deactivated",
        "ReplicaFactor": 1,
        "Partitions": 1,
        "Configs": {
          "acks": "Leader"
        }
      }
    }
  },
  "AllowedHosts": "*"
}
